<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- magento.attribute search view -->
    <record id="magento_attribute_search_view" model="ir.ui.view">
        <field name="name">magento.attribute.view.search</field>
        <field name="model">magento.attribute</field>
        <field name="arch" type="xml">
            <search string="Busqueda de datos">
                <field name="name"/>
                <group expand="1" string="Agrupar Por">
                    <filter string="Instancia" name="group_by_instance" context="{'group_by':'magento_instance_id'}"/>
                    <filter string="Odoo attribute id" name="group_by_odoo_id" context="{'group_by':'odoo_attribute_id'}"/>
                    <filter string="Odoo attribute value id" name="group_by_odoo_id" context="{'group_by':'odoo_attribute_value_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- magento.attribute tree view -->
    <record id="magento_attribute_view_tree" model="ir.ui.view">
        <field name="name">magento_attribute.view.tree</field>
        <field name="model">magento.attribute</field>
        <field name="arch" type="xml">
            <tree>
                <field name="magento_attribute_id" 
                readonly="1"
                />
                <field name="magento_attribute_value_id" 
                readonly="1"
                />
                <field name="name" readonly="1"/>
                <field name="magento_instance_id" readonly="1"/>
                <field name="odoo_attribute_id"/>
            </tree>
        </field>
    </record>

    <record id="magento_attribute_action_view" model="ir.actions.act_window">
        <field name="name">Atributos Magento</field>
        <field name="res_model">magento.attribute</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No hay atributos creados
          </p>
        </field>
    </record>
    <menuitem
        action="magento_attribute_action_view" id="magento_attribute_config"
        parent="odoo_magento2_ept.menu_configuration_root" sequence="9"/>

</odoo>