<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- magento.color search view -->
    <record id="magento_color_search_view" model="ir.ui.view">
        <field name="name">magento.color.view.search</field>
        <field name="model">magento.color</field>
        <field name="arch" type="xml">
            <search string="Busqueda de datos">
                <field name="name"/>
                <group expand="1" string="Agrupar Por">
                    <filter string="Instancia" name="group_by_instance" context="{'group_by':'magento_instance_id'}"/>
                    <filter string="Odoo id" name="group_by_odoo_id" context="{'group_by':'odoo_color_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- magento.color tree view -->
    <record id="magento_color_view_tree" model="ir.ui.view">
        <field name="name">magento_color.view.tree</field>
        <field name="model">magento.color</field>
        <field name="arch" type="xml">
            <tree>
                <field name="magento_color_id" readonly="1" />
                <field name="name" readonly="1"/>
                <field name="magento_instance_id" readonly="1"/>
                <field name="odoo_color_id" widget="many2many_tags" />
            </tree>
        </field>
    </record>
    <!-- magento.color tree view -->
    <record id="magento_color_view_form" model="ir.ui.view">
        <field name="name">magento_color.view.form</field>
        <field name="model">magento.color</field>
        <field name="arch" type="xml">
            <form >
                <sheet >
                    <group name="name" string="Colores Magento">
                        <group name="name">
                            <field name="name" readonly="0"/>
                            <field name="magento_color_id" readonly="0" />
                        </group>
                        <group name="name">
                            <field name="magento_instance_id" readonly="0"/>
                        </group>
                        <label for='odoo_color_id'></label>
                        <field name="odoo_color_id" widget="many2many_tags" />

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="magento_color_action_view" model="ir.actions.act_window">
        <field name="name">Colores Magento</field>
        <field name="res_model">magento.color</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            No hay colores creados
            </p>
        </field>
    </record>
    <!-- <menuitem action="magento_color_action_view" id="magento_color_config" parent="odoo_magento2_ept.menu_configuration_root" sequence="8"/> -->
    <!-- #########################Product color ################ -->
    <!-- product.color inherit form view -->
    <record id="odoo_magento2_ept_product_color_tree" model="ir.ui.view">
        <field name="name">product.color.inherit.view.tree</field>
        <field name="model">product.color</field>
        <field name="inherit_id" ref="izas_product_custom.product_color_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="magento_color_id" readonly="1" />
                <field name="magento_instance_id" readonly="1"/>
                <field name="magento_name" />
            </xpath>

        </field>
    </record>
    <!-- model.name inherit form view -->
    <record id="odoo_magento2_ept_product_color_form" model="ir.ui.view">
        <field name="name">product.color.inherit.view.form</field>
        <field name="model">product.color</field>
        <field name="inherit_id" ref="izas_product_custom.product_color_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="magento_color_id" readonly="0" />
                <field name="magento_instance_id" readonly="0"/>
                <field name="magento_name" />
            </xpath>
        </field>
    </record>



</odoo>