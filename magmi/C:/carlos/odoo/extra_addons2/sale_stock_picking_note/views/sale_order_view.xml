<odoo>
    <record id="view_order_form_inherit_sale_stock" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock" />
        <field name="arch" type="xml">
            <field name="partner_shipping_id" position="after">
                <field
                    name="picking_note"
                    attrs="{'readonly': [('state', 'not in', ('draft', 'sent'))]}"
                />
            </field>
        </field>
    </record>
    <record id="view_order_tree_inherit_sale_stock" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_tree" />
        <field name="arch" type="xml">
            <field name="partner_id" position="before">
                <field name="picking_note"/>
            </field>
        </field>
    </record>
    <record id="view_order_tree_onboarding_inherit_sale_stock" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding" />
        <field name="arch" type="xml">
            <field name="partner_id" position="before">
                <field name="picking_note"/>
            </field>
        </field>
    </record>
    
</odoo>
