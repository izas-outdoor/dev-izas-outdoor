<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Forgot Your Password?</title>
    </head>
    <body>
        <referenceBlock name="root">
            <action method="setHeaderTitle">
                <argument translate="true" name="title" xsi:type="string">Forgot Your Password?</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Customer\Block\Account\Forgotpassword" name="forgotPassword" template="Magento_Customer::form/forgotpassword.phtml">
                <container name="form.additional.info" as="form_additional_info"/>
            </block>
        </referenceContainer>
        <referenceBlock name="breadcrumbs">

    <action method="addCrumb">
        <argument name="crumbName" xsi:type="string">home</argument>
        <argument name="crumbInfo" xsi:type="array">
            <item name="title" xsi:type="string" translate="true">HOME</item>
            <item name="label" xsi:type="string" translate="true">HOME</item>
            <item name="link" xsi:type="string">/</item>
        </argument>
    </action>
    <action method="addCrumb">
        <argument name="crumbName" xsi:type="string">account</argument>
        <argument name="crumbInfo" xsi:type="array">
            <item name="title" xsi:type="string" translate="true">Forgot Your Password?</item>
            <item name="label" xsi:type="string" translate="true">Forgot Your Password?</item>

            <item name="last" xsi:type="boolean">true</item>
        </argument>
    </action>
  </referenceBlock>
    </body>
</page>
