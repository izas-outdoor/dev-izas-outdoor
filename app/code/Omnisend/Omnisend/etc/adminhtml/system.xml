            <label>Guest Subscriber Synchronization</label>
            <tab>omnisend</tab>
            <resource>Omnisend_Omnisend::omnisend_cron_config</resource>
            <group id="cron" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
