                    <label>Cron Expression</label>
                </field>
            </group>
        </section>
        <section id="update_products" translate="label" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Product Synchronization</label>
            <tab>omnisend</tab>
