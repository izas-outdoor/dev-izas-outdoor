<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">

    <event name="adminhtml_sales_order_creditmemo_register_before">
        <observer name="m_rma_observer" instance="\Lof\Rma\Observer\SalesOrderCreditmemoRegisterBefore"/>
    </event>
    <event name="sales_order_creditmemo_save_after">
        <observer name="m_rma_observer" instance="\Lof\Rma\Observer\SalesOrderCreditmemoSaveAfter"/>
    </event>

    <event name="controller_action_postdispatch">
        <observer name="m_rma_postdispatch" instance="\Lof\Rma\Observer\RmaPostdispatch"/>
    </event>

    <event name="rma_update_rma_after">
        <observer name="m_rma_observer" instance="\Lof\Rma\Observer\RmaChangedObserver"/>
    </event>

    <event name="rma_add_message_after">
        <observer name="m_rma_observer" instance="\Lof\Rma\Observer\AddMessageObserver"/>
    </event>

    <event name="sales_order_save_after">
        <observer name="Lof_Rma_save_order_status_history" instance="\Lof\Rma\Observer\OrderSaveAfter"/>
