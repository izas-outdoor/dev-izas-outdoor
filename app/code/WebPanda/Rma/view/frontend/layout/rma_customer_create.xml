<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <css src="WebPanda_Rma::css/style.css"/>
    </head>
    <body>
        <referenceBlock name="customer_account_navigation">
            <action method="setActive">
                <argument name="path" xsi:type="string">rma/customer</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="WebPanda\Rma\Block\Customer\Rma\Create" name="customer_account_rma_create" template="customer/rma/create.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
